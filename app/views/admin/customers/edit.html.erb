<div class="container">
  <div class="col-12 mx-auto col-md-8 col-lg-6 card shadow-lg border border-success">
    <div class="card-body">
      <h3 class="card-title mb-4">会員情報編集</h3>
      <div class="row">
        <div class="col-12 col-md-8 mx-auto">
          <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
            <div class="form-group">
              <%= f.label :name, "ユーザー名" %>
              <%= f.text_field :name, class:"form-control border border-primary" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class:"form-control border border-primary" %>
            </div>
            <div class="form-group">
              <%= f.label :introduction, "自己紹介" %>
              <%= f.text_area :introduction, class:"form-control border border-primary", rows:"4" %>
            </div>
            <div class="form-grop d-flex justify-content-around mb-3">
              <div>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label "有効" %>                
              </div>
              <div>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label "退会" %>                
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "保存", class:"btn btn-success", style:"width: 200px;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
