<div class="container">
  <div class="col-12 mx-auto col-md-10 col-lg-8 card shadow-lg border border-success">
    <div class="card-body">
      <h3 class="mt-5 mb-4 p-2 bg-secondary text-light">
        <span class="headline px-3">投稿詳細</span>
      </h3>
      <h4 class="mt-3 ml-3">
        <span class="p-1 bg-dark text-dark border border-dark">
          <span class="search-word px-3">投稿ユーザー：<%= @customer.name %></span>
        </span>
      </h4>
      <div class="text-center my-3">
        <%= image_tag @sake_post.get_image(500,500) %>
      </div>
      <div class="col-10 mx-auto">
        <table class="table">
          <tr>
            <td style="width: 30%">商品名：</td>
            <td style="width: 70%"><%= @sake.name %></td>
          </tr>
          <tr>
            <td>種類：</td>
            <td><%= @genre.genre %></td>
          </tr>
          <tr>
            <td>生産地：</td>
            <td><%= @sake.prefectures %></td>
          </tr>
          <tr>
            <td>特徴：</td>
            <td><%= @sake_post.feature %></td>
          </tr>
          <tr>
            <td>感想：</td>
            <td><%= @sake_post.impression %></td>
          </tr>
          <tr>
            <td>評価：</td>
            <td><%= @sake_post.rate %> 点</td>
          </tr>
        </table>
      </div>
      <div class="row px-3 d-flex justify-content-around">
        <%= link_to "編集", edit_admin_sake_post_path(@sake_post), class:"btn btn-success", style:"width: 150px" %>
        <%= link_to "投稿を削除", admin_sake_post_path(@sake_post), method: :delete, class:"btn btn-danger", style:"width: 150px", data: {confirm: "削除しますか？"} %>
      </div>
    </div>
  </div>
</div>