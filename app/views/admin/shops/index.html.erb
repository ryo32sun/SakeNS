<div class="container">
  <div class="row">
    <div class="col-9 mx-auto">
      <h3 class="mt-5 mb-4 p-2 bg-secondary text-light">
        <span class="headline px-3"> お 店 一 覧</span>
      </h3>
      <div>
        <table class="table table-hover table-striped">
          <thead>
            <tr class="table-secondary">
              <th>店名</th>
              <th>住所</th>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @shops.each do |shop| %>
              <tr>
                <td><%= shop.name %></td>
                <td><%= shop.address %></td>
                <td><%= shop.shop_genre.genre %></td>
                <td><%= link_to "編集", edit_admin_shop_path(shop), class:"btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div>
          <%= paginate @shops %>
        </div>
      </div>
    </div>
  </div>
</div>