<div class="container">
  <div class="col-12 mx-auto col-md-8 col-lg-6 card shadow-lg border border-primary text-white bg-secondary">
    <div class="card-body">
      <h3 class="card-title mb-4 bg-dark p-2">管理者ログイン</h3>
      <div class="row">
        <div class="col-12 col-md-8 mx-auto">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control border border-primary" %>
            </div>
          
            <div class="field mt-3 mb-4">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control border border-primary" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Log in", class:"form-control btn btn-primary shadow" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
