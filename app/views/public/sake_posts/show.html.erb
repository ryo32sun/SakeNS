<div class="container">
  <div class="row">
    <div class="col-9">
      <h3 class="mb-5 p-2 bg-secondary text-light border border-dark">
        <span class="headline px-3">投 稿 詳 細<i class="fa-solid fa-beer-mug-empty ml-2"></i></span>
      </h3>
      <%= render "public/sake_posts/sake_show", sake: @sake, sake_post: @sake_post, customer: @customer %>
