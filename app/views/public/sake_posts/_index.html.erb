<div class="row">
  <% sake_posts.each do |sake_post| %>
    <div class="col-3 offset-1">
      <%= link_to sake_post_path(sake_post) do %>
      <div><%= sake_post.sake.name %></div>
      <div><%= image_tag sake_post.get_image(100, 100) %></div>
      <div class="row">
        <div class="col-3">
          <%= image_tag sake_post.customer.get_profile_image(50, 50) %><br>
        </div>
        <div class="col-5">
          <%= sake_post.impression %>
        </div>
      </div>
      <div><%= sake_post.customer.name %></div>
      <% end %>
    </div>
  <% end %>
</div>
<div>
  <%= paginate sake_posts %>
</div>
