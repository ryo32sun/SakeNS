<div class="row">
  <% shop_posts.each do |shop_post| %>
  <div class="card text-white bg-secondary mb-3 post-card">
    <%= image_tag shop_post.sake_post.get_image(200, 200), class:"bd-placeholder-img card-img-top", style:"height: 150px;" %>
    <span class="sake-post-genre float-right px-1"><%= shop_post.sake_post.sake.sake_genre.genre %></span>
    <div class="card-body">
      <h5 class="card-title"><%= shop_post.sake_post.sake.name %></h5>
      <div class="row">
        <div class="col-4">
          <%= image_tag shop_post.sake_post.customer.get_profile_image(70, 70) %><br>
          <span class="ml-2 text-truncate"><%= shop_post.sake_post.customer.name %></span>
        </div>
        <div class="col-8">
          <p class="card-text text-truncate"><%= shop_post.sake_post.impression %></p>
          <!--星評価-->
          <div id="star-rate<%= shop_post.sake_post.id %>"></div>
          <script>
            $('#star-rate<%= shop_post.sake_post.id %>').empty();
            $('#star-rate<%= shop_post.sake_post.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: "<%= shop_post.sake_post.rate %>"
            });
          </script>
          <!--ここまで-->
          <span class="float-right"><%= link_to "詳細へ", sake_post_path(shop_post.sake_post), class:"btn btn-primary mt-2" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
