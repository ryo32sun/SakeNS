<div class="container">
  <div class="col-12 mx-auto col-md-8 col-lg-6 card shadow-lg border border-success">
    <div class="card-body">
      <h3 class="card-title mb-4">会員情報編集</h3>
      <div class="row">
        <div class="col-12 col-md-8 mx-auto">
          <%= form_with model: @customer do |f| %>
            <div class="form-group">
              <%= image_tag @customer.get_profile_image(100,100), class:"border border-dark mb-2" %>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
            <div class="form-group">
              <%= f.label :name, "ユーザー名" %>
              <%= f.text_field :name, class:"form-control border border-primary" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class:"form-control border border-primary" %>
            </div>
            <div class="form-group">
              <%= f.label :introduction, "自己紹介" %>
              <%= f.text_area :introduction, rows:"4", placeholder: "好きなお酒など自由にお書きください", class:"form-control border border-primary" %>
            </div>
            <div class="d-flex justify-content-between">
              <%= f.submit "更新する", class:"btn btn-success" %>
              <%= link_to "退会する", customers_check_path, class:"btn btn-danger", "data-confirm" => "本当に退会しますか？" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
