<div class="search_form">
  <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word,autofocus: true, placeholder: "キーワードを入力", class:"border border-primary" %>
    <%= f.select :model, options_for_select([["お酒",'Sake'], ["お店",'Shop']]), {}, {class:"border border-primary"} %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
</div>