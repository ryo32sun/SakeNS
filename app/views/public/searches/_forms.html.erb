<div class="search_form">
  <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word,autofocus: true, placeholder: "キーワードを入力", class:"form-control border border-primary" %>
    <div class="text-right m-2 row">
      <%= f.select :model, options_for_select([["お酒",'Sake'], ["お店",'Shop']]), {}, {class:"form-control border border-primary", style:"width: 200px;"} %>
      <%= f.submit "検索", class: "btn btn-primary ml-auto", style:"width: 100px;" %>
    </div>
  <% end %>
</div>